<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/cardbackground"
    android:layout_marginTop="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardbackground"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/cardbackground">

            <android.support.v7.widget.CardView
                android:id="@+id/bar_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardElevation="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:justifyContent="flex_start">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:layout_flexGrow="1">

                        <TextView
                            android:id="@+id/item_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="serif"
                            android:text="@string/name"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textSize="@dimen/opTextSize2" />

                        <TextView
                            android:id="@+id/item_number2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/item_number"
                            android:fontFamily="sans-serif-black"
                            android:text="@string/honor"
                            android:textAppearance="?attr/textAppearanceListItem"
                            android:textColor="@color/lightblue"
                            android:textSize="@dimen/opTextSize"
                            tools:ignore="SpUsage" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/button"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="50dp"
                        android:background="@drawable/left_border"
                        android:gravity="center"
                        android:text="@string/starPlus"
                        android:textColor="@color/lightslategray"
                        android:textSize="@dimen/opTextSize2"
                        tools:ignore="RelativeOverlap" />
                </com.google.android.flexbox.FlexboxLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/text_margin"
                    android:src="@drawable/female" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/white" />
</LinearLayout>