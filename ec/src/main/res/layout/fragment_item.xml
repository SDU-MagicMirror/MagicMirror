<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/separator"
                    android:paddingBottom="@dimen/separator"
                    app:alignItems="center"
                    app:flexDirection="row"
                    app:justifyContent="space_between">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/user_img"
                            android:layout_width="@dimen/imageLength"
                            android:layout_height="@dimen/imageLength"
                            android:src="@drawable/user_example" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="@dimen/separator"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_name"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:fontFamily="serif"
                                android:gravity="center"
                                android:text="name1"
                                android:textColor="@color/lightblue"
                                android:textSize="@dimen/opTextSize2" />

                            <TextView
                                android:id="@+id/text_honor"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:text="name2"
                                android:textSize="@dimen/opTextSize" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/button"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/button_shape"
                        android:text="@string/focus"
                        android:textColor="@color/peter_river"
                        android:textSize="@dimen/button_size" />
                </com.google.android.flexbox.FlexboxLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/content_border"
                    android:orientation="vertical"
                    android:padding="@dimen/separator">

                    <TextView
                        android:id="@+id/text_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="正文addddddddd"
                        android:textSize="@dimen/opTextSize3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/attached_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/female" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/dis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/textSep"
                    android:paddingBottom="@dimen/textSep"
                    app:alignItems="center"
                    app:justifyContent="center">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="@dimen/opLength"
                        android:layout_height="@dimen/opLength"
                        android:gravity="center"
                        android:text="{fa-share}"
                        android:textSize="@dimen/opTextSize2" />

                    <TextView
                        android:id="@+id/dis_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/opLength"
                        android:gravity="center"
                        android:text="@string/distribution"
                        android:textSize="@dimen/opTextSize"
                        tools:ignore="SpUsage" />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/textSep"
                    android:paddingBottom="@dimen/textSep"
                    app:alignItems="center"
                    app:justifyContent="center">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="@dimen/opLength"
                        android:layout_height="@dimen/opLength"
                        android:gravity="center"
                        android:text="{fa-commenting}"
                        android:textSize="@dimen/opTextSize2" />

                    <TextView
                        android:id="@+id/comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/opLength"
                        android:gravity="center"
                        android:text="@string/comment"
                        android:textSize="@dimen/opTextSize"
                        tools:ignore="SpUsage" />
                </com.google.android.flexbox.FlexboxLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/like"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/textSep"
                    android:paddingBottom="@dimen/textSep"
                    app:alignItems="center"
                    app:justifyContent="center">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="@dimen/opLength"
                        android:layout_height="@dimen/opLength"
                        android:gravity="center"
                        android:text="{fa-thumbs-up}"
                        android:textSize="@dimen/opTextSize2" />

                    <TextView
                        android:id="@+id/like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/opLength"
                        android:gravity="center"
                        android:text="@string/like"
                        android:textSize="@dimen/opTextSize"
                        tools:ignore="SpUsage" />
                </com.google.android.flexbox.FlexboxLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
