<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/top_news"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:alignItems="center"
                app:justifyContent="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:textColor="@color/black"
                    android:textSize="@dimen/opTextSize3" />

            </com.google.android.flexbox.FlexboxLayout>
        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginRight="@dimen/text_margin"
                        android:orientation="vertical">

                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/separator"
                            android:paddingBottom="@dimen/separator"
                            app:alignItems="center"
                            app:flexDirection="row"
                            app:justifyContent="space_between">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/user_img"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/user_example" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="@dimen/separator"
                                    android:layout_toEndOf="@id/user_img"
                                    android:layout_toRightOf="@id/user_img"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:fontFamily="serif"
                                        android:gravity="center"
                                        android:text="name1"
                                        android:textColor="@color/lightblue"
                                        android:textSize="@dimen/opTextSize2" />

                                    <TextView
                                        android:id="@+id/text_honor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:fontFamily="sans-serif"
                                        android:gravity="center"
                                        android:text="name2"
                                        android:textSize="@dimen/opTextSize" />
                                </LinearLayout>
                            </LinearLayout>

                            <!--<Button
                                android:id="@+id/button"
                                android:layout_width="@dimen/button_width"
                                android:layout_height="@dimen/button_height"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/button_shape"
                                android:text="@string/focus"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/button_size" />-->
                        </com.google.android.flexbox.FlexboxLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginBottom="@dimen/layout_margin"
                            android:background="@drawable/content_border"
                            android:orientation="vertical"
                            android:padding="@dimen/separator">

                            <TextView
                                android:id="@+id/text_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="正文addddddddd"
                                android:textSize="@dimen/opTextSize3" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/attached_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/female" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        tools:ignore="DisableBaselineAlignment">

                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/dis"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:alignItems="center"
                            app:justifyContent="space_between">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.google.android.flexbox.FlexboxLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/button_height"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/text_margin"
                                    android:paddingRight="@dimen/text_margin"
                                    app:alignItems="center"
                                    app:justifyContent="center">

                                    <TextView
                                        android:id="@+id/dis_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/opLength"
                                        android:gravity="center"
                                        android:text="@string/distribution"
                                        android:textSize="@dimen/opTextSize"
                                        tools:ignore="SpUsage" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/opLength"
                                        android:layout_marginLeft="@dimen/textSep"
                                        android:gravity="center"
                                        android:text="10"
                                        android:textSize="@dimen/opTextSize" />
                                </com.google.android.flexbox.FlexboxLayout>

                                <com.google.android.flexbox.FlexboxLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/button_height"
                                    android:orientation="horizontal"
                                    android:paddingLeft="@dimen/text_margin"
                                    android:paddingRight="@dimen/text_margin"
                                    app:alignItems="center"
                                    app:justifyContent="center">

                                    <TextView
                                        android:id="@+id/comment_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/opLength"
                                        android:gravity="center"
                                        android:text="@string/comment"
                                        android:textSize="@dimen/opTextSize"
                                        tools:ignore="SpUsage" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/opLength"
                                        android:layout_marginLeft="@dimen/textSep"
                                        android:gravity="center"
                                        android:text="10"
                                        android:textSize="@dimen/opTextSize" />
                                </com.google.android.flexbox.FlexboxLayout>
                            </LinearLayout>

                            <com.google.android.flexbox.FlexboxLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/button_height"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/text_margin"
                                android:paddingRight="@dimen/text_margin"
                                app:alignItems="center"
                                app:justifyContent="center">

                                <TextView
                                    android:id="@+id/like_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/opLength"
                                    android:gravity="center"
                                    android:text="@string/like"
                                    android:textSize="@dimen/opTextSize"
                                    tools:ignore="SpUsage" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/opLength"
                                    android:layout_marginLeft="@dimen/textSep"
                                    android:gravity="center"
                                    android:text="10"
                                    android:textSize="@dimen/opTextSize" />
                            </com.google.android.flexbox.FlexboxLayout>
                        </com.google.android.flexbox.FlexboxLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:minHeight="480dp"
                    tools:listitem="@layout/comment_item" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottombar_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/dis_b"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textSep2"
                android:layout_marginBottom="@dimen/textSep2"
                android:layout_weight="1"
                android:background="@drawable/bottombar_separator"
                app:alignItems="center"
                app:justifyContent="center">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="@dimen/opLength2"
                    android:layout_height="@dimen/opLength2"
                    android:gravity="center"
                    android:text="{fa-share}"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/dis_text_b"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/opLength2"
                    android:gravity="center"
                    android:text="@string/distribution"
                    android:textSize="@dimen/opTextSize2"
                    tools:ignore="SpUsage" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textSep2"
                android:layout_marginBottom="@dimen/textSep2"
                android:layout_weight="1"
                android:background="@drawable/bottombar_separator"
                app:alignItems="center"
                app:justifyContent="center">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="@dimen/opLength2"
                    android:layout_height="@dimen/opLength2"
                    android:gravity="center"
                    android:text="{fa-commenting}"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/comment_text_b"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/opLength2"
                    android:gravity="center"
                    android:text="@string/comment"
                    android:textSize="@dimen/opTextSize2"
                    tools:ignore="SpUsage" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textSep2"
                android:layout_marginBottom="@dimen/textSep2"
                android:layout_weight="1"
                app:alignItems="center"
                app:justifyContent="center">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="@dimen/opLength2"
                    android:layout_height="@dimen/opLength2"
                    android:gravity="center"
                    android:text="{fa-thumbs-up}"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/like_text_b"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/opLength2"
                    android:gravity="center"
                    android:text="@string/like"
                    android:textSize="@dimen/opTextSize2"
                    tools:ignore="SpUsage" />
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>